// Extract target architecture from command line arguments
fun extract_target_option(args: Vec<str>) -> Result<str, str> {
    for i in 0..args.len() {
        if args[i] == "--target" && i + 1 < args.len() {
            return Ok(args[i + 1]);
        }
    }
    Ok("native")  // Default target
}