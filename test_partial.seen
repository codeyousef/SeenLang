// Public entry point for the compiler
fun CompileSeenProgram(sourceCode: String, outputPath: String) -> Bool {
    println("ðŸš€ Seen Self-Hosting Compiler")
    println("   Production-Quality Implementation")
    
    // Step 1: Lexical Analysis
    println("\nðŸ“ Phase 1: Lexical Analysis")
    println("   âœ“ Loading language configuration...")
    
    let keywordManager = createKeywordManager()
    let lexer = createLexer(sourceCode, 1, keywordManager)
    let tokens = lexer.tokenize()
    
    println("   âœ“ Tokenized " + tokens.length().toString() + " tokens")
    
    // Step 2: Syntax Analysis  
    println("\nðŸŒ³ Phase 2: Syntax Analysis")
    println("   âœ“ Parsing tokens into AST...")
    
    let parser = createParser(tokens)
    let program = parser.parseProgram()
    
    println("   âœ“ Built AST with " + program.getItems().length().toString() + " items")
    
    // Step 3: Semantic Analysis (Type Checking)
    println("\nðŸ” Phase 3: Semantic Analysis")
    println("   âœ“ Type checking and inference...")
    
    let typeChecker = createTypeChecker()
    let typedProgram = typeChecker.checkProgram(program)
    
    if typeChecker.hasErrors() {
        println("   âŒ Type checking failed")
        let errors = typeChecker.getErrors()
        for error in errors {
            println("     Error: " + error.getMessage())
        }
        return false
    }
    
    println("   âœ“ Type checking passed")
    
    // Step 4: IR Generation
    println("\nâš¡ Phase 4: IR Generation")
    println("   âœ“ Generating SSA-form IR...")
    
    let irGenerator = createIRGenerator()
    let cfg = irGenerator.generateProgram(typedProgram)
    
    println("   âœ“ Generated CFG with " + cfg.blocks.length().toString() + " basic blocks")
    
    // Step 5: Code Generation
    println("\nâš™ï¸ Phase 5: Code Generation")
    println("   âœ“ Generating C99 code...")
    
    let codeGenerator = createCCodeGenerator()
    let cCode = codeGenerator.generateProgram(cfg)
    
    println("   âœ“ Generated " + cCode.length().toString() + " characters of C code")
    
    // Step 6: Write output
    println("\nðŸ’¾ Phase 6: Output Generation")
    let cFilePath = outputPath + ".c"
    let success = WriteFile(cFilePath, cCode)
    
    if not success {
        println("   âŒ Failed to write C file")
        return false
    }
    
    println("   âœ“ Wrote C code to " + cFilePath)
    
    // Step 7: Native Compilation
    println("\nðŸ”¥ Phase 7: Native Compilation")
    println("   âœ“ Compiling with GCC...")
    
    let compileCommand = "gcc -std=c99 -O2 -o " + outputPath + " " + cFilePath
    let compileResult = ExecuteCommand(compileCommand)
    
    if not compileResult.success {
        println("   âŒ Native compilation failed")
        return false
    }
    
    println("   âœ“ Compiled to executable: " + outputPath)
    
    println("\nðŸŽ‰ COMPILATION SUCCESSFUL!")
    println("   ðŸ“Š Statistics:")
    println("     - Tokens: " + tokens.length().toString())
    println("     - AST Items: " + program.getItems().length().toString())
    println("     - Basic Blocks: " + cfg.blocks.length().toString())
    println("     - C Code: " + cCode.length().toString() + " chars")
    println("   ðŸ“¦ Executable: " + outputPath)
    
    return true
}

