// Simple test to verify our bootstrap compiler can handle self-hosting syntax

fun main() -> Int {
    println("Testing bootstrap compilation");
    
    // Test string interpolation
    let name = "Seen";
    println("Hello from {name}!");
    
    // Test nullable types and safe navigation  
    let maybe: String? = "test";
    let result = maybe?.length() ?: 0;
    
    // Test word operators
    if result > 0 and name != "" {
        println("All tests passed");
    }
    
    return 0;
}