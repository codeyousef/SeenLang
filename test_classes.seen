// Test class definition
class Person {
    // Fields
    Name: String
    age: Int
    
    // Constructor-like static method  
    fun New(name: String, age: Int): Person {
        Person { Name: name, age: age }
    }
    
    // Instance method with receiver
    fun (p: Person) GetName(): String {
        p.Name
    }
    
    // Another instance method
    fun (p: Person) GetAge(): Int {
        p.age
    }
    
    // Public method (starts with capital)
    fun (p: Person) Greet(): String {
        "Hello, I'm {p.Name} and I'm {p.age} years old"
    }
}

// Create and use a person
let person = Person.New("Alice", 30)
let name = person.GetName()
let greeting = person.Greet()

println(greeting)