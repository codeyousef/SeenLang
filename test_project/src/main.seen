// Simple test program for LLVM code generation

func main() {
    // Test print statement
    println("Hello from LLVM!");
    
    // Test local variables
    val x = 10;
    val y = 20;
    println(x);
    println(y);
    
    // Test arithmetic
    val sum = x + y;
    println(sum);
    
    // Test if statement
    if (x < y) {
        println("x is less than y");
    } else {
        println("x is not less than y");
    }
    
    // Test while loop
    var count = 0;
    while (count < 5) {
        println(count);
        count = count + 1;
    }
    
    // Test for loop with range
    println("For loop test:");
    for i in 0..5 {
        println(i);
    }
}